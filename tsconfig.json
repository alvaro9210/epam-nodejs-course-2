{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./lib",
        "rootDir": "./src",
        "declaration": true,
        "emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}